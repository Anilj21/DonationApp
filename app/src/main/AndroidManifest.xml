<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.donation_app">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:label="Donation App"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Donation_app">

        <!-- Launcher Activity -->
        <activity android:name=".view.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Other Activities -->
        <activity android:name=".view.RegisterActivity" />
        <activity android:name=".view.DonorDashboardActivity" />
        <activity android:name=".view.NGOActivity" />
        <activity android:name=".view.UploadItemActivity" />

        <!-- Add NGO dashboard or volunteer activities if created -->
        <!-- <activity android:name=".view.NGODashboardActivity" /> -->
        <!-- <activity android:name=".view.VolunteerDashboardActivity" /> -->

    </application>

</manifest>
